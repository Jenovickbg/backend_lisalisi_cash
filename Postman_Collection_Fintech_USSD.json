	"item": [
		{
			"name": "1. Menu Principal (text vide)",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Response contains CON\", function () {",
							"    var jsonData = pm.response.json();",
							"    pm.expect(jsonData.response).to.include(\"CON\");",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"sessionId\": \"test-session-123\",\n  \"phoneNumber\": \"+237123456789\",\n  \"text\": \"\"\n}",
					"options": {
						"raw": {
							"language": "json"
						}
					}
				},
				"url": {
					"raw": "http://127.0.0.1:8000/ussd",
					"protocol": "http",
					"host": [
						"127",
						"0",
						"0",
						"1"
					],
					"port": "8000",
					"path": [
						"ussd"
					]
				},
				"description": "Test du menu principal USSD. Quand text est vide, on doit recevoir le menu avec CON."
			},
			"response": []
		},
